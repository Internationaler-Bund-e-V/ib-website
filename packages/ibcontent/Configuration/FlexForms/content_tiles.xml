<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Kacheln Allgemein</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.headline>
						<TCEforms>
							<label>Headline</label>
							<config>
								<type>input</type>
								<size>255</size>
							</config>
						</TCEforms>
					</settings.headline>
					<settings.subline>
						<TCEforms>
							<label>Subline</label>
							<config>
								<type>input</type>
								<size>255</size>
							</config>
						</TCEforms>
					</settings.subline>
					<settings.more>
						<TCEforms>
							<label>Link Beschreibung</label>
							<config>
								<type>input</type>
								<size>255</size>
							</config>
						</TCEforms>
					</settings.more>
					<settings.bgColor>
						<TCEforms>
							<label>Hintergrundfarbe</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">white</numIndex>
										<numIndex index="1">white</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">gray</numIndex>
										<numIndex index="1">gray</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.bgColor>
					<settings.layoutColumns>
						<TCEforms>
							<label>Spaltenlayout Desktop</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">default (25%)</numIndex>
										<numIndex index="1">25</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">33%</numIndex>
										<numIndex index="1">33</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">50%</numIndex>
										<numIndex index="1">50</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.layoutColumns>
				</el>
			</ROOT>
		</sDEF>
		<tiles>
			<ROOT>
				<TCEforms>
					<sheetTitle>Kacheln</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.tiles>
						<TCEforms>
							<title>Kachel</title>
						</TCEforms>
						<section>1</section>
						<title>Hinweis: F端r die korrekte Verwendung muss das PlugIn zuerst
							gespeichert werden!</title>
						<type>array</type>
						<el>
							<tile>
								<type>array</type>
								<title>Neue Kachel</title>
								<el>
									<headline>
										<TCEforms>
											<label>Headline</label>
											<config>
												<type>input</type>
												<size>255</size>
											</config>
										</TCEforms>
									</headline>
									<subline>
										<TCEforms>
											<label>Subline</label>
											<config>
												<type>input</type>
												<size>255</size>
											</config>
										</TCEforms>
									</subline>
									<image>
										<TCEforms>
											<label>Bild</label>
											<config>
												<type>group</type>
												<internal_type>db</internal_type>
												<appearance>
													<elementBrowserType>file</elementBrowserType>
													<elementBrowserAllowed>gif,jpg,jpeg,png</elementBrowserAllowed>
												</appearance>
												<allowed>sys_file</allowed>
												<size>1</size>
												<minitems>0</minitems>
												<maxitems>1</maxitems>
											</config>
										</TCEforms>
									</image>
									<caption>
										<TCEforms>
											<label>Beschreibung</label>
											<config>
												<type>input</type>
												<size>255</size>
											</config>
										</TCEforms>
									</caption>
									<tileBackgroundColor>
										<TCEforms>
											<label>Hintergrundfarbe Kachel</label>
											<config>
												<type>select</type>
												<renderType>selectSingle</renderType>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">default (gray)</numIndex>
														<numIndex index="1">default</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">white</numIndex>
														<numIndex index="1">white</numIndex>
													</numIndex>
												</items>
											</config>
										</TCEforms>
									</tileBackgroundColor>
									<linkimageOnly>
										<TCEforms>
											<label>Nur Bild als Link auf Zielseite verwenden (es
												wird kein Textlink generiert)</label>
											<config>
												<type>check</type>
											</config>
										</TCEforms>
									</linkimageOnly>
									<showImageMobile>
										<TCEforms>
											<label>Bild auch in der mobilen Ansicht anzeigen</label>
											<config>
												<type>check</type>
											</config>
										</TCEforms>
									</showImageMobile>
									<targetpageintern>
										<TCEforms>
											<label>Zielseite (intern typo3)</label>
											<config>
												<!--
												<type>group</type>
												<internal_type>db</internal_type>
												<allowed>pages</allowed>
												<size>1</size>
												<maxitems>1</maxitems>
												<minitems>0</minitems>
												<show_thumbs>1</show_thumbs>
												-->
												<type>input</type>
												<renderType>inputLink</renderType>
											</config>
										</TCEforms>
									</targetpageintern>
									<targetpageextern>
										<TCEforms>
											<label>Zielseite (extern)</label>
											<config>
												<type>input</type>
												<size>255</size>
											</config>
										</TCEforms>
									</targetpageextern>
									<linkdescription>
										<TCEforms>
											<label>Individuelle Link Beschreibung</label>
											<config>
												<type>input</type>
												<size>255</size>
											</config>
										</TCEforms>
									</linkdescription>
									<showinfomodal>
										<TCEforms>
											<label>Info-Button f端r Pop-Up-Fenster anzeigen</label>
											<config>
												<type>check</type>
											</config>
										</TCEforms>
									</showinfomodal>
									<infomodal>
										<TCEforms>
											<label>Inhalt f端r Pop-Up-Fenster einf端gen</label>
											<config>
												<type>text</type>
												<cols>3</cols>
												<rows>1</rows>
												<enableRichtext>1</enableRichtext>
											</config>
										</TCEforms>
									</infomodal>
								</el>
							</tile>
						</el>
					</settings.tiles>
				</el>
			</ROOT>
		</tiles>
	</sheets>
</T3DataStructure>