<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Accordion Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.bgColor>
						<TCEforms>
							<label>Choose Background Color</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">white</numIndex>
										<numIndex index="1">white</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">gray</numIndex>
										<numIndex index="1">gray</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.bgColor>
					<settings.layout>
						<TCEforms>
							<label>Choose Layout</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Start Page</numIndex>
										<numIndex index="1">start</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Sub Pages</numIndex>
										<numIndex index="1">2col</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.layout>
					<settings.useSmallLabelFont>
						<label>Kleine Schrift für die Headlines verwenden</label>
						<config>
							<type>check</type>
							<default>0</default>
						</config>
					</settings.useSmallLabelFont>
				</el>
			</ROOT>
		</sDEF>
		<rightSide>
			<ROOT>
				<TCEforms>
					<sheetTitle>Accordion Elements</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.sliderContainer>
						<TCEforms>
							<tx_templavoila>
								<title>Slider</title>
							</tx_templavoila>
						</TCEforms>
						<section>1</section>
						<title>Hinweis: Für die korrekte Verwendung muss das PlugIn zuerst gespeichert werden!</title>
						<type>array</type>
						<el>
							<ItemWrap>
								<type>array</type>
								<tx_templavoila>
									<title>new slide</title>
								</tx_templavoila>
								<el>
									<title>
										<TCEforms>
											<label>Title</label>
											<config>
												<type>input</type>
												<eval>required</eval>
												<size>255</size>
											</config>
										</TCEforms>
									</title>
									<accordionImage>
										<TCEforms>
											<label>(optional) Image for Accordion Title</label>
											<!--
                                            <config>
                                                <type>group</type>
                                                <internal_type>db</internal_type>
                                                <appearance>
                                                    <elementBrowserType>file</elementBrowserType>
                                                    <elementBrowserAllowed>gif,jpg,jpeg,png</elementBrowserAllowed>
                                                </appearance>
                                                <allowed>sys_file</allowed>
                                                <size>1</size>
                                                <minitems>0</minitems>
                                                <maxitems>1</maxitems>
                                            </config>
											-->
											<config>
												<type>link</type>
												<allowedTypes>
													<numIndex index="0">file</numIndex>
													<!--<numIndex index="1">page</numIndex>-->
												</allowedTypes>
												<minitems>1</minitems>
												<maxitems>1</maxitems>
											</config>
										</TCEforms>
									</accordionImage>
									<columnStyle>
										<TCEforms>
											<label>Column Style</label>
											<config>
												<type>select</type>
												<renderType>selectSingle</renderType>
												<items type="array">
													<numIndex index="0" type="array">
														<numIndex index="0">100%</numIndex>
														<numIndex index="1">1</numIndex>
													</numIndex>
													<numIndex index="1" type="array">
														<numIndex index="0">50:50%</numIndex>
														<numIndex index="1">2</numIndex>
													</numIndex>
													<numIndex index="2" type="array">
														<numIndex index="0">33:33:33%</numIndex>
														<numIndex index="1">3</numIndex>
													</numIndex>
													<numIndex index="3" type="array">
														<numIndex index="0">66:33%</numIndex>
														<numIndex index="1">4</numIndex>
													</numIndex>
													<numIndex index="4" type="array">
														<numIndex index="0">33:66%</numIndex>
														<numIndex index="1">5</numIndex>
													</numIndex>
													<numIndex index="5" type="array">
														<numIndex index="0">25:75%</numIndex>
														<numIndex index="1">6</numIndex>
													</numIndex>
													<numIndex index="6" type="array">
														<numIndex index="0">75:25%</numIndex>
														<numIndex index="1">7</numIndex>
													</numIndex>
												</items>
											</config>
										</TCEforms>
									</columnStyle>
									<text>
										<TCEforms>
											<label>Text Column 1</label>
											<config>
												<type>text</type>
												<cols>3</cols>
												<rows>3</rows>
												<enableRichtext>1</enableRichtext>
											</config>

										</TCEforms>
									</text>
									<text2>
										<TCEforms>
											<label>Text Column 2</label>
											<config>
												<type>text</type>
												<cols>3</cols>
												<rows>3</rows>
												<enableRichtext>1</enableRichtext>
											</config>

										</TCEforms>
									</text2>
									<text3>
										<TCEforms>
											<label>Text Column 3</label>
											<config>
												<type>text</type>
												<cols>3</cols>
												<rows>1</rows>
												<enableRichtext>1</enableRichtext>
											</config>

										</TCEforms>
									</text3>
								</el>
							</ItemWrap>
						</el>
					</settings.sliderContainer>
				</el>
			</ROOT>
		</rightSide>
	</sheets>
</T3DataStructure>