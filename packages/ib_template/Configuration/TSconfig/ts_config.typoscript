####### add rte config
@import 'EXT:ib_template/Configuration/TSconfig/ts_config_rte.typoscript'

# configure the dropdown header_layout in the General tab of every content element
# this removes the unused layout options and leaves only the Default and hidden option for selection
# @see https://mantis.rm-solutions.de/mantis/view.php?id=347
# @author mkettel
TCEFORM.tt_content.header_layout {
	removeItems = 1,2,3,4,5
}

# tx_news layouts
tx_news.templateLayouts {
	1 = Listenansicht Startseite
	2 = Listenansicht Standard
	3 = Detailansicht mit Kategorien
}

# initial hide new news entries on creation
# see 0002014: Einstellung - News bei Erstellung deaktiv
# mk@rms, 2021-05-27
TCAdefaults.tx_news_domain_model_news.hidden = 1
# MA#2146
TCAdefaults.sys_file_reference.showinpreview = 1

# see -> MA#2753
TCEFORM.tx_news_domain_model_news.teaser.label.de = Teaser (wird nur in der Listen- und Slideransicht angezeigt)