# -----------------------------------------------------------------------------
# TT_NEWS CONFIGURATION
# -----------------------------------------------------------------------------
plugin.tt_news.displayLatest.listImageMode = {$plugin.tt_news.latestImageMode}
plugin.tt_news {
	pid_list = {$portalSettings.tt_news.pid_list}
	singlePid = {$portalSettings.tt_news.single_pid}
	backPid = {$portalSettings.tt_news.list_view_pid}
	templateFile = typo3conf/ext/ib_template/Resources/Private/Template/html/ext/tt_news_v3_template.html
	allowCaching = 1


	substitutePagetitle = 1

	# 'resize2max', 'crop' und 'resize'.
	#latestImageMode = crop
	#listImageMode = resize

	#singleMaxW = 120
	#singleMaxH = 122
	#latestMaxW = 66
	#latestMaxH = 55

	showRelatedNewsByCategory = 0
	related_stdWrap.wrap = <dl class="news-single-related" style="display:none">|</dl>

	# pagination
	usePiBasePagebrowser = 1
	pageBrowser {
		maxPages = 20
		showResultCount = 0
		showPBrowserText = 0
		dontLinkActivePage = 1
		showFirstLast = 0

		#pagefloat = center
		showRange = 0
		hscText = 1
		showResultsNumbersWrap = |
		showResultsWrap = |
		linksWrap = |
		browseLinksWrap = |

		browseBoxWrap = <ul class="ib-newslist-pagination">|</ul>
		activeLinkWrap = <li class="active"> | <span class="li-divider">&#448;</span></li>
		disabledLinkWrap = <li class="disabled"> | <span class="li-divider">&#448;</span></li>
		inactiveLinkWrap = <li class="inactive"> | <span class="li-divider">&#448;</span></li>
	}

	_LOCAL_LANG {
		de {
			more = Mehr erfahren
			backToList = zurück zur Übersicht
			latestHeader = Presse & News
			noNewsToListMsg = noch sind keine News vorhanden
			list = test

			pi_list_browseresults_prev = <<
			pi_list_browseresults_next = >>
		}

		en {
			more = read more
			backToList = back
			latestHeader = Press & News
			noNewsToListMsg = no news available
		}
	}

	list {
		paginate {
			itemsPerPage = 2
			insertAbove = FALSE
			insertBelow = TRUE
			lessPages = TRUE
			pagesBefore = 5
			pagesAfter = 5
		}
	}

	displayList {
		subheader_stdWrap >
		subheader_stdWrap.crop = 150| ... | 1
		image {
			file.maxW = 280
			file.maxH = 160
			#file.width = 400
			#file.height = 300
		}
	}

	displaySingle {
		image {
			file.maxW = 582
			file.maxH = 400

			#file.width = 1000
			#file.height = 1000

			#große version
			#imageLinkWrap.width = 1000
			#imageLinkWrap.height = 1000
		}
	}

	genericmarkers {
		# gray or white background color
		color = TEXT
		#color.value = gray
		color.value = white
	}
}


