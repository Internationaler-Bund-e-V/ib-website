# start news sitemap
[{$portalSettings.NewsSitemap.generate} == 1]
    plugin.tx_seo.config {
        xmlSitemap {
            sitemaps {
                news {
                    provider = TYPO3\CMS\Seo\XmlSitemap\RecordsXmlSitemapDataProvider
                    config {
                        table = tx_news_domain_model_news
                        additionalWhere = 
                        sortField = sorting
                        lastModifiedField = tstamp
                        pid = {$portalSettings.NewsSitemap.NewsFolderPid}
                        recursive = 2
                        url {
                            pageId = {$portalSettings.NewsSitemap.NewsDetailPid}
                            fieldToParameterMap {
                                uid = tx_news_pi1[news]
                            }
                            additionalGetParameters {
                                tx_news_pi1.controller = News
                                tx_news_pi1.action = detail
                            }
                            #useCacheHash = 1
                        }
                    }
                }
            }
        }
    }
[global]

//location sitemap
[{$portalSettings.LocationSitemap.generate} == 1]
    plugin.tx_seo.config {
        xmlSitemap {
            sitemaps {
                standorte {
                    provider = Rms\Ibcontent\Seo\IbXmlSitemapDataProvider
                    config {
                        entity = Location
                        navigationID = {$portalSettings.LocationSitemap.NavigationID}
                        redaktionURL = {$portalSettings.misc.productDbBaseUrl}
                        url {
                            pageId = {$portalSettings.LocationSitemap.DetailPid}
                        }
                    }
                }
            }
        }
    }
[global]

//fwd sitemap
[{$portalSettings.FwdSitemap.generate} == 1]
    plugin.tx_seo.config {
        xmlSitemap {
            sitemaps {
                freiwilligendienste {
                    provider = Rms\Ibcontent\Seo\IbXmlSitemapDataProvider
                    config {
                        entity = FWD
                        redaktionURL = {$portalSettings.misc.productDbBaseUrl}
                        url {
                            pageId = {$portalSettings.FwdSitemap.DetailPid}
                        }
                    }
                }
            }
        }
    }
[global]
## end news sitemap
