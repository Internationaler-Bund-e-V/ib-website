{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "./JavaScript/types"
        ]
    },
    "include": [ "JavaScript/**/*" ],
    "exclude": [ "**/*.spec.ts" ]
}
